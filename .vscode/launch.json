{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "attach",
            "name": "Attach Main",
            "protocol": "inspector",
            "port": 5858,
            "showAsyncStacks": true,
            "sourceMaps": true
        },
        {
            "type": "chrome",
            "request": "attach",
            "name": "Attach Renderer",
            "port": 5959,
            "showAsyncStacks": true,
            "sourceMaps": true,
            "sourceMapPathOverrides": {
                "webpack:///*": "${workspaceRoot}/src/renderer/*"
            }
        }
    ]
}